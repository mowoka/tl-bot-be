generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model user {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  nik String @unique
  name String
  idTelegram String
  partner String
  sector String
  witel String
  regional String
  password String
}

model teknisi_job{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  name String @unique
  point Float
}